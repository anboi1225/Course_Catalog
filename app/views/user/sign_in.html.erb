<p>Find me in app/views/user/sign_in.html.erb</p>


<section class="signinform cf">

<% if flash[:signed_in]%>
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="row">
        <div class = "col-xs-3">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Course System</a>
        </div>
        </div>
        <div class = "col-xs-8">
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="../home/show">Home</a></li>
            <li><a href="../subject/show">Subjects</a></li>
            <li><a href="../course/show">Courses</a></li>
            <li><a href="../instructor/show">Instructors</a></li>
            <li><a href="../search/show">Search</a></li>
          </ul>
        </div><!--/.nav-collapse -->
        </div>
        <div class = "col-xs-1">
          <form name="sign_in_form" action="../user/sign_out" method="get" accept-charset="utf-8">
          <button type="submit" class="btn btn-default" name="sign_out_button" style="vertical-align: middle;">Sign out</button>
          </form>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if !flash[:signed_in]%>
<form name="sign_in_form" action="user/sign_in" method="get" accept-charset="utf-8">
    <ul>
        <div class = "row">
        <div class = "col-xs-2">
          <label for="usermail" class="form-control">Username</label>
        </div>
        <div class = "col-xs-3">
          <input type="string" name="username" placeholder="your username" class="form-control">
        </div>
        </div>
        <div class = "row">
        <div class = "col-xs-2">
          <label for="password" class="form-control">Password</label>
        </div>
        <div class = "col-xs-3">
          <input type="password" name="password" placeholder="password" class="form-control">
        </div>
        </div>
        <div class = "row">
        <div class = "col-xs-2">
          <button type="submit" value="Sign In" name="sign_in_button" class="form-control"> Sign In </button>
        </div>
        <div class = "col-xs-3">
          <button type="submit" value="Sign Up" name="sign_up_button" class="form-control"> Sign Up </button>
        </div>
        </div>

    </ul>
</form>
<% end %>

<% if flash[:alert] %>
<div class = "row">
  <div class = "col-xs-5">
    <p class = "form-control"><%=flash[:alert]%></p>
  </div>
</div>
<% end %>

</section>

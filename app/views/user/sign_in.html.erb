<h1>User#sign_in</h1>
<p>Find me in app/views/user/sign_in.html.erb</p>


<section class="signinform cf">

<% if flash[:signed_in]%>
  <form name="sign_in_form" action="../user/sign_out" method="get" accept-charset="utf-8">
  <div id="topnavigationbar" class="row" style="margin-left:1em">
    <div>
      <%= link_to "Home", home_show_path %>
      <%= link_to "Subjects", subject_show_path %>
      <%= link_to "Courses", course_show_path %>
      <%= link_to "Instructors", instructor_show_path %>
      <input type="submit" value="Sign Out" name="sign_out_button">
    </div>
  </div>
  </form>
<% end %>

<% if !flash[:signed_in]%>
<form name="sign_in_form" action="user/sign_in" method="get" accept-charset="utf-8">
    <ul>
        <li><label for="usermail">Username</label>
        <input type="string" name="username" placeholder="your username"></li>
        <li><label for="password">Password</label>
        <input type="password" name="password" placeholder="password"></li>
        <li>
        <input type="submit" value="Sign In" name="sign_in_button"></li>
        <li>
        <input type="submit" value="Sign Up" name="sign_up_button"></li>
    </ul>
</form>
<% end %>

<% if flash[:alert] %>
<p id = "notice"><%=flash[:alert]%></p>
<% end %>

</section>

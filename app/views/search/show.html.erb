<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="row">
      <div class = "col-xs-3">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Course System</a>
      </div>
      </div>
      <div class = "col-xs-8">
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active"><a href="../home/show">Home</a></li>
          <li><a href="../subject/show">Subjects</a></li>
          <li><a href="../course/show">Courses</a></li>
          <li><a href="../instructor/show">Instructors</a></li>
          <li><a href="show">Search</a></li>
        </ul>
      </div>
      </div>
      <div class = "col-xs-1">
        <form name="sign_in_form" action="../user/sign_out" method="get" accept-charset="utf-8">
        <button type="submit" class="btn btn-default" name="sign_out_button" style="vertical-align: middle;">Sign out</button>
        </form>
      </div>
    </div>
  </div>
</div>


<form name="search_form" action="../search/show" method="get" accept-charset="utf-8">
  <div class = "col-xs-2">
  <select name = "select_tag" class="form-control">
    <option selected="selected">All Subjects</option>
    <option disabled>──────────</option>
    <% Subject.all.each do |subject| %>
      <option><%= subject.name %></option>
    <% end %>
  </select>
  </div>
  <div class = "col-xs-6">
    <input type="string" class="form-control" name="search_box" placeholder="keyword">
  </div>
  <div class = "col-xs-2">
    <button type="submit" class="btn btn-default" name="search_button" style="vertical-align: middle;">Search</button>
  </div>
</form>

<div>
  <% if @result%>
    <% @result.each do |course|%>
        <div class = "col-xs-5">
          <%= course.name %>
        </div>
        <div class = "col-xs-5">
          <%= get_subject_name(course.subjects) %>
        </div>
        <div class = "col-xs-2">
          <%= button_to 'Add', {:controller => "home", :action => "show", :course_name => course.name}%>
        </div>
    <% end %>
  <% end %>
</div>

<%= form_tag("../search/show_result", method: "get", remote: true, id: "search_form") do %>
  <div class = "col-xs-2">
  <select name = "select_tag" onchange = "search_change()" class="form-control">
    <option selected="selected">All Subjects</option>
    <option disabled>──────────</option>
    <% Subject.all.each do |subject| %>
      <option><%= subject.name %></option>
    <% end %>
  </select>
  </div>
  <script src="change_search.js" type="text/javascript" charset="utf-8"></script>
  <div class = "col-xs-8">
    <input type="string" class="form-control" oninput = "search_change()" name="search_box" placeholder="keyword">
  </div>
<% end %>



